<?xml version="1.0" encoding="utf-8"?>

<com.yibao.music.view.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/list_item_selector"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_play_list_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0.5dp"
        android:background="@drawable/list_item_selector"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_play_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_song_name_selector"
                android:textSize="@dimen/music_loating_title" />

            <TextView
                android:id="@+id/tv_play_list_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="10"
                android:textSize="@dimen/music_artist"
                android:visibility="visible" />


        </LinearLayout>

        <ImageView
            android:id="@+id/iv_item_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:contentDescription="@null"
            android:src="@drawable/arrow_more" />



    </RelativeLayout>

    <LinearLayout
        android:id="@+id/play_list_item_slide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/quick_delete_bg"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_item_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:contentDescription="@null"
            android:src="@drawable/iv_edit_selector"
            android:visibility="gone" />
        <ImageView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/slide_delete_selector" />

    </LinearLayout>
</com.yibao.music.view.SwipeItemLayout>