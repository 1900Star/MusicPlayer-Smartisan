<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginTop="2dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_album_category_random_play"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/btn_playing_all_selector" />

    <LinearLayout
        android:id="@+id/album_category_list_ll"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="@drawable/btn_category_start_down_selector"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_album_category_list"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/album_category_list_down_selector" />

        <TextView
            android:id="@+id/tv_album_category_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="3dp"
            android:textStyle="bold"
            android:text="@string/album_list"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/about_sign" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/album_category_tile_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/btn_category_end_selector"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_album_category_tile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/album_category_tile_selector" />

        <TextView
            android:id="@+id/tv_album_category_tile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="3dp"
            android:textStyle="bold"
            android:text="@string/album_tile"
            android:textColor="@color/textDes"
            android:textSize="@dimen/about_sign" />

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_album_category_play"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="4dp"
        android:src="@drawable/btn_play_selector" />
</LinearLayout>
